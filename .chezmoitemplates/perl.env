{{ $perlDir := joinPath (env "HOME") "perl5" }}
{{ if stat $perlDir }}

# Load the local Perl runtime and libraries.
path=(
	${path[@]}
	{{ joinPath $perlDir "bin" }}
)
PERL5LIB="{{ joinPath $perlDir "bin" "lib" "perl5" }}${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
PERL_LOCAL_LIB_ROOT="{{ $perlDir }}${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT='--install_base "{{ $perlDir }}"'; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE={{ $perlDir }}"; export PERL_MM_OPT;

{{ end }}

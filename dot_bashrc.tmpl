	notify-send --urgency=low -i \
	"$( [ $? = 0 ] && echo terminal || echo error >&2 )" \
	"$( \
		history \
			| tail -n1 \
			| sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'' \
		)"'

{{-    end }}


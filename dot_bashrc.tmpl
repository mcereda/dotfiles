ask-for-confirmation () {
	is-true "$DEBUG" && enable-xtrace

	read -p 'Continue? ' REPLY

	if ! is-true "$REPLY"
	then
		echo "aborting"
		return 1
	fi

	local RETURN_VALUE=$?
	is-true "$DEBUG" && disable-xtrace
	return $RETURN_VALUE
}

{{-    if and
         (lookPath "lynx")
         (lookPath "pandoc") }}

# Show a rendered markdown file.
alias mdv='markdown-view'
markdown-view () {
	is-true "$DEBUG" && enable-xtrace

	if [[ $# -lt 1 ]]
	then
		echo "error: no input files given" >&2
		echo "usage: $0 FILE..."
		return 1
	fi

	pandoc $@ | lynx -stdin

	local RETURN_VALUE=$?
	is-true "$DEBUG" && disable-xtrace
	return $RETURN_VALUE
}

{{-    end }}

